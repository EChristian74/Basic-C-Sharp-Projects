@using CarInsurance.Controllers
@using CarInsurance.Models
@model List<QuoteSignUp>


<div class="row no-gutters m-3">
  <div class="card col-sm-12 col-md-10 col-lg-6 mx-auto shadow">
    <div class="card-header text-center">
      <h5 class="m-0">Quotes</h5>
    </div>
    <div class="card-body">
      @foreach (var signup in Model) //Loops through data inserted into database
      {
          <div class="row mb-3">
            <div class="col-3">
              @signup.FirstName
            </div>
            <div class="col-3">
              @signup.LastName
            </div>
            <div class="col-5">
              @signup.EmailAddress
            </div>
            <div class="col-1">
              @signup.Quote
            </div>
          </div>

        }
      }
    </div>
  </div>
</div>


